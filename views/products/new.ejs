<%- include('../partials/header', { title: 'Add Product' }) %>

        <h1 class="display-1">Make New Product</h1>
        <!-- New product form -->
        <form action="/products" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name:</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name">
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Product Price:</label>
                <input type="number" class="form-control" name="price" id="price" placeholder="Price">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Product Image:</label>
                <input type="text" class="form-control" name="img" id="image" placeholder="Product Image URL">
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Select Category:</label>
                <select class="form-select" name="category">
                    <% for(let category of categories) { %>
                        <option value="<%= category %>">
                            <%= category %>
                        </option>
                        <% } %>
                </select>
            </div>

            <button class="btn btn-success">Add Product</button>
            <a href="/products" class="btn btn-dark ms-2">Cancel</a>
        </form>

<%- include('../partials/footer') %>