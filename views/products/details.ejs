<%- include('../partials/header', { title: product.name }) %>

        <h1 class="text-center text-dark display-3 fw-semibold mb-3"><i><%= product.name %></i></h1>

        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm border-0 bg-white p-4">
                    <div class="row g-4 align-items-start">
                        <!-- Product Image -->
                        <div class="col-md-6">
                           <img src="<%= product.img %>"  class="img-fluid rounded-3 shadow-sm" alt="<%= product.name %>">
                        </div>

                        <!-- Product Details -->
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item fs-5"><b>Price:</b>$<%= product.price %>
                                </li>
                                <li class="list-group-item fs-5">
                                    <b>Category:</b>
                                    <a href="/products?category=<%= product.category %>" class="text-decoration-none">
                                        <span class="badge bg-success text-capitalize px-3 py-2"><%= product.category %></span>
                                    </a>
                                </li>
                                <li class="list-group-item fs-5"><b>Details:</b>
                                    <p class="mt-2 mb-0 text-muted">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Modi quidem est officiis animi consequat doloribus nemo similique magni libero veniam suscipit optio dolor doloremque non? Distinctio fugit eum quis quidem?Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                    </p>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>

                    <!-- Action Buttons -->
                    <div class="text-center mt-3">
                    <a href="/products" class="btn btn-info me-2">All Products</a>
                    <a href="/products/<%= product._id%>/edit" class="btn btn-primary me-2">Edit</a>
                    <form action="/products/<%=product._id%>?_method=DELETE" style="display:inline;" method="post"
                        style="display:inline;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>

<%- include('../partials/footer') %>