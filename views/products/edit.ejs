<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product Details</title>
</head>

<body>

    <h1>Edit Product</h1>
    <!-- Edit product form -->
    <form action="/products/<%= product._id %>?_method=PUT" method="post">
        <label for="name">Product Name:</label>
        <input type="text" name="name" id="name" placeholder="Name" value="<%= product.name %>">

        <label for="price">Product Price:</label>
        <input type="number" name="price" id="price" placeholder="Price" value="<%= product.price %>">

        <label for="image">Product Image:</label>
        <input type="text" name="img" id="image" placeholder="Product Image URL" value="<%= product.img %>">

        <label for="category">Select Category:</label>
        <!-- Category dropdown with current category selected -->
        <select name="category" id="category">
            <% for(let category of categories) { %>
                <option value="<%= category %>" <%= product.category === category ? 'selected' : '' %>><%= category %>
                </option>
            <% } %>
        </select>
        <button>Edit</button>
    </form>
    <!-- Cancel and go back to product details -->
    <a href="/products/<%= product._id %>">Cancel</a>

</body>
</html>