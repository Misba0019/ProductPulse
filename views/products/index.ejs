<%- include('../partials/header', { title: 'Home' }) %>

    <h1 class=" text-center mb-4 display-4 fw-semibold"><%= category %> Products!</h1>

    <div class="card bg-white shadow-sm p-3">
    <div class="table-responsive">
    <table class="table table-hover table-striped table-bordered align-middle rounded overflow-hidden mb-0">
    <thead class="table-dark">
        <tr>
            <th> Name </th>
            <th> Price </th>
        </tr>
    </thead>

    <tbody>
        <% for (let product of products) { %>
            <tr>
                <td>
                    <a href="/products/<%= product._id %>" class="text-decoration-none text-dark fw-semibold"><%= product.name %>
                    </a>
                    <span class="badge bg-success ms-2 text-capitalize"><%= product.category %></span>
                </td>
                <td><%= product.price.toFixed(2) %></td>
            </tr>
        <% } %>
    </tbody>
    </table>
    </div>
    </div>

    <div class="text-center mt-4">
    <a class="btn btn-success ms-2" href="/products/new">Add Product</a>
    <%if(category !== 'All'){ %>
        <a class="btn btn-info ms-2" href="/products">All Products</a>
    <% } %>
    </div>

<%- include('../partials/footer') %>